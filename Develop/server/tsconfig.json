{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", /* Use ESNext to generate ES modules */
    "moduleResolution": "Node", /* Node.js resolution */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", /* Ensure compiled files go to 'dist' */
    "rootDir": "./src", /* Assuming your source files are in 'src' */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

